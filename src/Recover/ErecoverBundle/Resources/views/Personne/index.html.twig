{% extends "RecoverErecoverBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block recovererecover_body %}
    <h1>Personne list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Matricule</th>
                <th>Date naissance</th>
                <th>Lieu naissance</th>
                <th>Sexe</th>
                <th>Civilite</th>
                <th>Photo</th>
                <th>Telmobile</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>Numero Carte d'Identite</th>
                <th>Numero passport</th>
                <th>Nationalite</th>
                <th>Nom contact</th>
                <th>Prenom contact</th>
                <th>Telephone contact</th>
                <th>Telephone mobilecontact</th>
                <th>Adresse contact</th>
                <th>Email contact</th>
                <th>Permis conduire</th>
                <th>Num permis de conduire</th>
                <th>Cv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personne_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.matricule }}</td>
                <td>{% if entity.datenaissance %}{{ entity.datenaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lieuNaiss }}</td>
                <td>{{ entity.sexe }}</td>
                <td>{{ entity.civilite }}</td>
                <td>{{ entity.photo }}</td>
                <td>{{ entity.telMobile }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.numCi }}</td>
                <td>{{ entity.numPassport }}</td>
                <td>{{ entity.nationalite }}</td>
                <td>{{ entity.nomContact }}</td>
                <td>{{ entity.prenomContact }}</td>
                <td>{{ entity.telContact }}</td>
                <td>{{ entity.telMobileContact }}</td>
                <td>{{ entity.adresseContact }}</td>
                <td>{{ entity.emailContact }}</td>
                <td>{{ entity.permisConduire }}</td>
                <td>{{ entity.numPermisdeconduire }}</td>
                <td>{{ entity.cv }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personne_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('personne_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('personne_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
