{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categorie list</h1>

    <table id="table_id" class="display" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Salairebase</th>
                <th>Tauxhoraire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.categorie }}</td>
                <td>{{ entity.salaireBase }}</td>
                <td>{{ entity.tauxHoraire }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categorie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categorie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('categorie_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
