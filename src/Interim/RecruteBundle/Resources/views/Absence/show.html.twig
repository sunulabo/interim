{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Absence</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{{ entity.dateDepart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Dateretour</th>
                <td>{{ entity.dateRetour|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ entity.objet }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ entity.etat }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ entity.commentaire }}</td>
            </tr>
            <tr>
                <th>Nbrejour</th>
                <td>{{ entity.nbrejour }}</td>
            </tr>
            <tr>
                <th>Commentairerh</th>
                <td>{{ entity.commentaireRH }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('absence') }}">
         Retour
        </a>
    </li>
    <li>
        <a href="{{ path('absence_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
