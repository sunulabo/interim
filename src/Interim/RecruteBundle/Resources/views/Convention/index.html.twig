{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Convention list</h1>

    <table class="records_list" id="table_id" class="display" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Convention</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('convention_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.convention }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('convention_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('convention_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('convention_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
