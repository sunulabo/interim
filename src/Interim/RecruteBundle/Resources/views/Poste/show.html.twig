{% extends "InterimRecruteBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block interimrecrutebundle_body %}
    <h1>Poste</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Datelimite</th>
                <td>{{ entity.dateLimite|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datefonction</th>
                <td>{{ entity.dateFonction|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ entity.salaire }}</td>
            </tr>
            <tr>
                <th>Avantage</th>
                <td>{{ entity.avantage }}</td>
            </tr>
            <tr>
                <th>Tache</th>
                <td>{{ entity.tache }}</td>
            </tr>
            <tr>
                <th>Mission</th>
                <td>{{ entity.mission }}</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ entity.objectif }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('poste') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('poste_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
